@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<GridPage>



@{
	Layout = "_Layout.cshtml";
    var page = Model.Content;
}
<div class="grid-page">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                @Html.CachedPartial(
                "Components/_Hero",
                new HeroViewModel
                {
                    Image = page.HeroImage,
                    GridSize = 12,
                    ImageHeight = 500,
                    ImageHeightMobile = 350,
                }, 3600, cacheByPage: true)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @Html.CachedPartial(
                "Components/_Breadcrumb",
                new BreadcrumbViewModel
                {
                    CurrentPage = Model.Content,
                    ShowCurrentPage = true
                }, 3600, cacheByPage: true)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @Html.CachedPartial(
                "Components/_PageHeader",
                new PageHeaderViewModel(Model.Content),
                3600,
                cacheByPage: true)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-8">
                @Html.GetGridHtml(Model.Content, "layout")
            </div>
            <div class="col-xs-12 col-sm-4">

            </div>
        </div>
    </div>
</div>